{
  "name": "sem-db-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "db:stop": "docker-compose down",
    "db:run": "docker-compose up -d",
    "db:start": "yarn db:run && sleep 5 && yarn db:migrate && yarn db:seed",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:migrate": "npx sequelize-cli db:migrate",
    "test": "npx jest",
    "dev": "concurrently \"npm run dev:watch\" \"npm run dev:serve\"",
    "dev:watch": "tsc -w",
    "dev:serve": "nodemon -w dist/ dist/index.js",
    "lint": "eslint src"
  },
  "dependencies": {
    "@fastify/cors": "^7.0.0",
    "axios": "^1.6.8",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.0.0",
    "fastify": "^3.28.0",
    "fluent-json-schema": "^3.1.0",
    "http-errors": "^2.0.0",
    "jest": "^28.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.19.0"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/bcrypt": "^5.0.2",
    "@types/http-errors": "^1.8.2",
    "@types/jest": "^27.5.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "concurrently": "^7.1.0",
    "eslint": "^8.13.0",
    "nodemon": "^2.0.15",
    "pino-pretty": "^7.6.1",
    "sequelize-cli": "^6.4.1",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.3"
  }
}
